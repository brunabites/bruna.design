{
  "name": "bruna.design.new",
  "workspaces": [
    "app/*"
  ],
  "description": "Personal website for Bruna Bites built with Next.js, Typescript, Tailwind, and Contentlayer",
  "version": "1.0.0",
  "license": "MIT",
  "author": {
    "name": "Bruna Bites",
    "email": "alo@bruna.design",
    "url": "https://bruna.design"
  },
  
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "postbuild": "NODE_OPTIONS='--experimental-json-modules' node ./src/scripts/generate-rss.mjs && node ./src/scripts/generate-sitemap.mjs"
  },
  "dependencies": {
    "@headlessui/react": "^1.5.0",
    "contentlayer": "^0.2.4",
    "dayjs": "^1.11.1",
    "github-slugger": "^1.4.0",
    "next": "12.1.5",
    "next-compose-plugins": "^2.2.1",
    "next-contentlayer": "^0.2.4",
    "next-seo": "^5.4.0",
    "next-themes": "^0.1.1",
    "preact": "^10.7.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "reading-time": "^1.5.0",
    "sharp": "^0.30.4"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^12.1.5",
    "@tailwindcss/typography": "^0.5.7",
    "@types/github-slugger": "^1.3.0",
    "@types/node": "17.0.25",
    "@types/react": "18.0.5",
    "@types/react-dom": "18.0.1",
    "autoprefixer": "^10.4.4",
    "eslint": "8.13.0",
    "eslint-config-next": "12.1.5",
    "eslint-config-prettier": "^8.5.0",
    "globby": "^13.1.1",
    "husky": "^7.0.4",
    "i": "^0.3.7",
    "lint-staged": "^12.4.0",
    "postcss": "^8.4.12",
    "prettier": "^2.6.2",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-code-titles": "^1.0.3",
    "rehype-prism-plus": "^1.3.2",
    "rehype-slug": "^5.0.1",
    "remark-footnotes": "^4.0.1",
    "remark-gfm": "^3.0.1",
    "rss": "^1.2.2",
    "tailwindcss": "^3.0.24",
    "typescript": "4.6.3"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "eslint --cache --fix"
    ],
    "*.+(js|jsx|ts|tsx|json|css|md|mdx)": [
      "prettier --write"
    ]
  }
}
